{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 30,
  // "spacing": 4,
  "modules-left": ["sway/workspaces", "sway/mode"],
  "modules-right": [
    "tray",
    "network",
    "bluetooth",
    "temperature",
    "memory",
    "battery",
    "pulseaudio",
    "backlight",
    "clock"
  ],

  "sway/workspaces": {
      "disable-scroll": true,
      "all-outputs": true,
      "format": "{name}",
  },
  "sway/mode": {
      "format": "<span style=\"italic\">{}</span>"
  },

  "tray": {
    "icon-size": 14,
    "spacing": 5
  },

  "clock": {
    "format": "{:%R  ï³  %d/%m}",
