#! /usr/bin/env bash
POSITIONAL_ARGS=()

while [[ $# -gt 0 ]]; do
  case $1 in
    -u|--url)
      REPO_URL="$2"
      shift # past argument
      shift # past value
      ;;
    -*|--*)
      echo "Unknown option $1"
      exit 1
      ;;
    *)
      POSITIONAL_ARGS+=("$1") # save positional arg
      shift # past argument
      ;;
  esac
done

set -- "${POSITIONAL_ARGS[@]}" # restore positional parameters

echo 
if [[ ${#POSITIONAL_ARGS[@]} > 1 ]]; then
  echo "Too many positional arguments"
  exit 1
elif [[ ${#POSITIONAL_ARGS[@]} == 1 ]]; then
  REPO_NAME=$POSITIONAL_ARGS
else
  REPO_NAME=""
fi

cd ~/repos
if [[ $REPO_URL ]]; then
  git clone $REPO_URL $REPO_NAME
elif [[ $REPO_NAME != "" ]]; then
  git init $REPO_NAME
else
  echo "Not enough arguments"
  echo "No repo cloned or initialized"
  exit 1
fi

selected_name=$(echo $REPO_NAME | tr . _)
tmux_running=$(pgrep tmux)

echo $selected_name

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c ~/repos/$REPO_NAME
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c ~/repos/$REPO_NAME
fi

if tmux server-info 2> /dev/null; then
    exec tmux switch-client -t $selected_name
fi

exec tmux attach -client -t $selected_name
